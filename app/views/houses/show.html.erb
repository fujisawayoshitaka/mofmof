<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>家賃:</strong>
  <%= @house.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @house.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @house.old %>
</p>

<p>
  <strong>備考:</strong>
  <%= @house.remarks %>
</p>
<hr>

  <% @house.distances.each.with_index(1) do |distance, index| %>
    <p>最寄駅:<%= index %></p>
    <tr>
      <p>
        <strong>路線名:</strong>
        <td><%= distance.route %></td>
      </p>
      <p>
        <strong>駅名:</strong>
        <td><%= distance.station %></td>
      </p>
      <p>
        <strong>徒歩分数:</strong>
        <td><%= distance.foot %></td>
      </p>
    </tr>
    <hr>
  <% end %>



<%= link_to 'Edit', edit_house_path(@house) %> |
