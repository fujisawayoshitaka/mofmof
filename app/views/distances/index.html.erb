<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>家賃</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.price %></td>
        <td><%= house.address %></td>
        <td><%= house.old %></td>
        <td><%= house.remarks %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

